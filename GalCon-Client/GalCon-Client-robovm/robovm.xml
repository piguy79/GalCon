<config>
  <executableName>${app.executable}</executableName>
  <mainClass>${app.mainclass}</mainClass>
  <os>ios</os>
  <arch>thumbv7</arch>
  <target>ios</target>
  <iosInfoPList>Info.plist.xml</iosInfoPList>
  <resources>
    <resource>
      <directory>../GalCon-Client-android/assets</directory>
      <includes>
        <include>data/**</include>
      </includes>
      <skipPngCrush>true</skipPngCrush>
    </resource>
    <resource>
		<directory>../../../robovm-ios-bindings2/google-play-game-services/resources</directory>
		<skipPngCrush>true</skipPngCrush>
	</resource>
  </resources>
  <libs>
   	<lib>c++</lib>
    <lib>libs/ios/libgdx.a</lib>
    <lib>libs/ios/libObjectAL.a</lib>
  </libs>
  <forceLinkClasses>
    <pattern>com.badlogic.gdx.scenes.scene2d.ui.*</pattern>
  </forceLinkClasses>
  <frameworkPaths>
      <path>../../../robovm-ios-bindings2/google-play-game-services/libs/</path>
  </frameworkPaths>
  <frameworks>
    <framework>GoogleOpenSource</framework>
	<framework>GooglePlayGames</framework>
	<framework>GooglePlus</framework>
    <framework>AddressBook</framework>
    <framework>AssetsLibrary</framework>
    <framework>Foundation</framework>
    <framework>SystemConfiguration</framework>
    <framework>Security</framework>
    <framework>MediaPlayer</framework>
    <framework>CoreText</framework>
    <framework>CoreMotion</framework>
    <framework>CoreLocation</framework>
    <framework>UIKit</framework>
    <framework>OpenGLES</framework>
    <framework>QuartzCore</framework>
    <framework>CoreGraphics</framework>
    <framework>CoreData</framework>
    <framework>OpenAL</framework>
    <framework>AudioToolbox</framework>
    <framework>AVFoundation</framework>
  </frameworks>  
</config>
